# SellApp - Apache Configuration for cPanel Hosting

# Enable URL Rewriting
<IfModule mod_rewrite.c>
    RewriteEngine On
    
    # Redirect any requests containing kabz_events to remove it (301 permanent redirect)
    RewriteCond %{REQUEST_URI} kabz_events
    RewriteRule ^(.*)kabz_events(.*)$ /sellapp$1$2 [R=301,L]
    RewriteCond %{REQUEST_URI} ^/kabz_events
    RewriteRule ^kabz_events(.*)$ /sellapp$1 [R=301,L]
    
    # Exclude static assets from routing - serve them directly
    RewriteCond %{REQUEST_URI} \.(css|js|jpg|jpeg|png|gif|ico|svg|woff|woff2|ttf|eot|pdf|zip|mp4|mp3)$ [NC]
    RewriteRule ^ - [L]
    
    # Exclude assets directory from routing
    RewriteCond %{REQUEST_URI} ^/sellapp/assets/ [NC,OR]
    RewriteCond %{REQUEST_URI} ^/assets/ [NC]
    RewriteRule ^ - [L]
    
    # Redirect all requests to index.php unless file or directory exists
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteRule ^(.*)$ index.php [QSA,L]
</IfModule>

# Protect backend folders from direct access
RedirectMatch 403 ^/(app|config|database|routes|storage|vendor)/

# Security Headers
<IfModule mod_headers.c>
    Header set X-Content-Type-Options "nosniff"
    Header set X-Frame-Options "SAMEORIGIN"
    Header set X-XSS-Protection "1; mode=block"
</IfModule>

# Disable directory listing
Options -Indexes

# PHP Settings (if allowed by host)
<IfModule mod_php7.c>
    php_value upload_max_filesize 20M
    php_value post_max_size 20M
    php_value max_execution_time 300
    php_value max_input_time 300
</IfModule>

